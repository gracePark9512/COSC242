#include <stdio.h>
#include <stdlib.h>

int main(void){
    int s1, s2, s3;

    while( 1== scanf("%g%g%g", &s1, &s2, &s3)){
    
    if(s1<=s2 && s1<=s3){
        printf("%g",(s2+s3)/2);
    }else if(s2<=s1 && s2<=s3){
        printf("%g", (s1 +s3)/2);
    }else{
        print("%g", (s1 +s2)/2);
    }
  }
    return EXIT_SUCCESS;
}


        
